{
  "name": "rpg-backend",
  "version": "0.0.0",
  "private": true,
  "main": "./build/server/bin/www",
  "scripts": {
    "start": "npm run prod",
    "server": "node .",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "predev": "npm run build",
    "dev": "NODE_ENV=development PORT=3001 npm run server",
    "prod": "NODE_ENV=production npm run server",
    "watch:dev": "nodemon",
    "test": "NODE_ENV=test jest --watchAll",
    "db:seed": "./node_modules/.bin/sequelize-cli db:seed:all",
    "integration": "NODE_ENV=test jest -c jest.integration.config.js --testTimeout=10000",
    "preintegration": "NODE_ENV=test npm run db:reset:test && npm run db:create:test",
    "db:create:test": "NODE_ENV=test npx sequelize-cli db:seed:all",
    "db:reset:test": "NODE_ENV=test npx sequelize-cli db:seed:undo:all",
    "db:create:dev": "NODE_ENV=development npx sequelize-cli db:seed:all",
    "db:reset:dev": "NODE_ENV=development npx sequelize-cli db:seed:undo:all"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "ext": "ts,json",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.ts",
      "*.spec.ts",
      "*.ispec.ts"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@types/jsonwebtoken": "^8.5.1",
    "bcrypt": "^5.0.1",
    "debug": "~2.6.9",
    "dotenv": "^8.5.1",
    "express": "~4.16.1",
    "jest": "^26.6.3",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "sequelize": "^6.6.2",
    "sqlite3": "^5.0.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.1",
    "@types/sequelize": "^4.28.9",
    "@types/sqlite3": "^3.1.7",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "sequelize-cli": "^6.2.0",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}