{
  "name": "rpg-backend",
  "version": "0.0.0",
  "private": true,
  "main": "./build/bin/www",
  "scripts": {
    "start": "npm run prod",
    "server": "node .",
    "prebuild": "tslint -c tslint.json -p tsconfig.json --fix",
    "build": "tsc",
    "predev": "npm run build",
    "dev": "NODE_ENV=development PORT=3001 npm run server",
    "prod": "NODE_ENV=production npm run server",
    "watch:dev": "nodemon",
    "test": "jest --watchAll"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "ext": "ts,json",
    "watch": [
      "src/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.ts",
      "*.spec.ts"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "jest": "^26.6.3",
    "morgan": "~1.9.1",
    "npm-run-all": "^4.1.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/debug": "^4.1.5",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/morgan": "^1.9.2",
    "@types/node": "^15.0.1",
    "@types/uuid": "^8.3.0",
    "nodemon": "^2.0.7",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "tslint": "^6.1.3",
    "typescript": "^4.2.4"
  }
}
